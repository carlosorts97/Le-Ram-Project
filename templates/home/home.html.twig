<script>
    /*Funcion para cargar el header pequeño al recargar*/
    $(window).ready(function(){
        if ($(window).width() <= 1050 || $(window).scrollTop() >= 40){
            $(".cabecera").addClass("active fixed-top");
            $(".container-fluid:first").addClass("margin_scroll-sm");
            $(".btn-success").addClass("btn-sm");
            $(".btn-navegar").addClass("btn-sm");
            $(".logo").text("Le-Ram");
            Fcabecera=1;
        } else{
            $(".cabecera").removeClass("active fixed-top");
            $(".container-fluid:first").removeClass("margin_scroll-sm");
            $(".btn-success").removeClass("btn-sm");
            $(".btn-navegar").removeClass("btn-sm");
            $(".logo").text("");
            $(".logo").append("Compra.Vende.<br/>Authentic streetwear.");
            Fcabecera=0;
        }
    });
    /*Funcion para controlar el aspecto del header al hacer scroll hacia abajo*/
    var Fcabecera = 0;
    $(function() {
        $(window).on("scroll", function() {
            if($(window).scrollTop() >= 40 && Fcabecera==0 ) {
                $(".cabecera").addClass("active fixed-top");
                $(".container-fluid:first").addClass("margin_scroll-lg");
                $(".logo").text("Le-Ram");
            } else if($(window).scrollTop() < 40 && Fcabecera==0) {
                //remove the background property so it comes transparent again (defined in your css)
                $(".cabecera").removeClass("active fixed-top");
                $(".container-fluid:first").removeClass("margin_scroll-lg");
                $(".logo").text("");
                $(".logo").append("Compra.Vende.<br/>Authentic streetwear.");
            }
        });
    });
    /*Funcion para controlar el aspecto del header dependiendo del tamaño del dispositivo*/
    $(window).resize(function(){
        if ($(window).width() <= 1050){
            $(".cabecera").addClass("active fixed-top");
            $(".container-fluid:first").addClass("margin_scroll-sm");
            $(".btn-success").addClass("btn-sm");
            $(".btn-navegar").addClass("btn-sm");
            $(".logo").text("Le-Ram");
            Fcabecera=1;
        } else if($(window).width() > 1050 && $(window).scrollTop() < 40){
            $(".cabecera").removeClass("active fixed-top");
            $(".container-fluid:first").removeClass("margin_scroll-sm");
            $(".btn-success").removeClass("btn-sm");
            $(".btn-navegar").removeClass("btn-sm");
            $(".logo").text("");
            $(".logo").append("Compra.Vende.<br/>Authentic streetwear.");
            Fcabecera=0;
        }
    });

</script>
