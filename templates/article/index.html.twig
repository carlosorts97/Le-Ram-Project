{% extends 'base.html.twig' %}

{% block title %}Le-Ram Streetwear{% endblock %}

{% block body %}
    <div class="container margin_scroll">
    </div>
    <div class="container-fluid">
        <div class="row mb-5">
            <div class="col-lg-2 col-md-2 col-sm-2 col-12 border-right pt-5 ">
                <div class="col-lg-12 col-4 btn btn-light mb-3 border-bottom">fdsfdsd</div>
                <div class="col-lg-12 col-4 btn btn-light mb-3 border-bottom">Pantalones</div>
                <div class="col-lg-12 col-4 btn btn-light mb-3 border-bottom">Sudadera</div>
                <div class="col-lg-12 col-4 btn btn-light mb-3 border-bottom">Accesorios</div>
                <div class="col-lg-12 col-4 btn btn-light mb-3 border-bottom">Sneakers</div>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-10 col-10">
                <div class="row">
                    <div class="col-lg-6 text-left border-bottom pb-3">
                        <div class="btn btn-light align-self-center">
                            {{ category.name }}
                        </div>
                        >
                        <div class="btn btn-light align-self-center">
                                {{ brand.name }}
                        </div>
                    </div>
                    <div class="col-lg-6 text-right border-bottom">
                        <select class="selectpicker" data-live-search="true">
                            <option data-tokens="caro">Más caro</option>
                            <option data-tokens="barato">Más barato</option>
                            <option data-tokens="fecha">Release date</option>
                            <option data-tokens="popular">Popular</option>
                        </select>
                    </div>
                    {% for article in articles %}
                        <div class="col-lg-3 col-md-6 col-sm-12 text-center mt-5">
                            <img src="{{ asset('img/camisetaPrueba.png') }}" width="170px">
                            <p class="text-center">{{ article.name}}</p>
                            <p class="text-center">{{ article.price | number_format}}€</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    </div>
{% endblock %}
