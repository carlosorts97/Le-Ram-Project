{% extends 'base.html.twig' %}

{% block error %}{% endblock %}

{% block body %}
    <div class="container margin_scroll">
        <div class="row justify-content-center">
            <div class="col-lg-4 box-form justify-content-center">
                <h2>Inicia sesion</h2>
                <form action="{{ path('app_login') }}" method="post">
                    <div class="row form-group">
                        <input type="text" id="email" name="_username" class="form-control" value="{{ last_username }}"/>
                    </div>
                    <div class="row form-group">
                        <input type="password" id="password" name="_password" class="form-control" />
                    </div>
                    <div class="row">
                        <button type="submit" class="btn btn-navegar col-lg-12">Log In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}