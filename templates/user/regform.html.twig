{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container margin_scroll">
        <div class="row justify-content-center">
            <div class="col-lg-6 box-form">
                <h2 class="text-center">Register</h2>
                {{form_start(form)}}
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(form.username) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(form.email) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-lg-6">
                        {{ form_row(form.surname) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(form.telephone) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(form.address) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(form.birthday) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(form.plainpassword) }}
                    </div>
                </div>
                <input type="submit" class="btn btn-navegar mt-4" value="Register">
                {{ form_errors(form) }}
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}