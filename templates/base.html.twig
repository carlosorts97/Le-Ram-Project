        <script>

            $('.dropdown-menu a.dropdown-toggle').on('click', function(e) {
                if (!$(this).next().hasClass('show')) {
                    $(this).parents('.dropdown-menu').first().find('.show').removeClass("show");
                }
                var $subMenu = $(this).next(".dropdown-menu");
                $subMenu.toggleClass('show');


                $(this).parents('dropdown.show').on('hidden.bs.dropdown', function(e) {
                    $('.dropdown-submenu .show').removeClass("show");
                });

                return false;
            });

            $(window).ready(function(){
                if ($(window).width() <= 800){
                    $(".btn").addClass("btn-sm");
                    $(".login").addClass("font-sm")
                    $("#login").addClass("align-self-center")
                    $("#categorias").addClass("text-left")
                    $("#vender .btn").addClass("col-4")

                } else{
                    $(".btn").removeClass("btn-sm");
                    $(".login").removeClass("font-sm")
                    $("#login").removeClass("align-self-center")
                    $("#categorias").removeClass("text-left")
                    $("#vender .btn").removeClass("col-4")
                }
            });

            $(window).resize(function(){
                if ($(window).width() <= 800){
                    $(".btn").addClass("btn-sm");
                    $(".login").addClass("font-sm")
                    $("#login").addClass("align-self-center")
                    $("#categorias").addClass("text-left")
                    $("#vender .btn").addClass("col-4")

                } else{
                    $(".btn").removeClass("btn-sm");
                    $(".login").removeClass("font-sm")
                    $("#login").removeClass("align-self-center")
                    $("#categorias").removeClass("text-left")
                    $("#vender .btn").removeClass("col-4")
                }
            });
        </script>
